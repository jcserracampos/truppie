<div class="card">
  <div class="card-block card-organizer">
    <div class="text-xs-center">
      <h4 class="card-title spaced-down">
        <%= render partial: 'layouts/organizer_picture', locals: { organizer: @organizer }%>
        <strong><%= @organizer.name %> </strong>
      </h4>
      <p class="card-text spaced-down"><%= @organizer.description %></p>
      <% if !@organizer.website.nil? %>
          <%= link_to @organizer.website, class: 'btn btn-primary-outline btn-sm', target: "_blank" do %>
              <i class="fa fa-external-link"></i> ir para seu website
          <% end %>
      <% end %>
      <% if !@organizer.email.nil? %>
          <a class="btn btn-primary-outline btn-sm" href="mailto:ola@truppie.com"><i class="fa fa-envelope"></i> dÃºvida? Envie um e-mail pra gente</a> <br />
      <% end %>
    </div>
  </div>
</div>
<ul class="list-group">
  <li class="list-group-item">
    <a href="<%= profile_edit_organizer_path(@organizer) %>">
      <% if @organizer.verified? %>
          <span class="label label-success label-pill pull-xs-right"><%= t('profile-verified-label') %></span>
      <% else %>
          <span class="label label-warning label-pill pull-xs-right"><%= t('profile-incomplete-label') %></span>
      <% end %>
      <%= t('organizer-profile-edit') %>
    </a>
  </li>
  <li class="list-group-item">
    <a href="<%= account_edit_organizer_path(@organizer) %>">
      <% if @organizer.try(:marketplace) and @organizer.marketplace.is_active? and @organizer.marketplace.account_user_data_verified %>
      <span class="label label-success label-pill pull-xs-right"><%= t('account-verified-label') %></span>
      <% else %>
      <span class="label label-danger label-pill pull-xs-right"><%= t('account-not-verified-label') %></span>
      <% end %>
      <%= t('organizer-account-edit') %>
    </a>
  </li>
  <li class="list-group-item">
    <a href="<%= bank_account_edit_organizer_path(@organizer) %>">
      <% if @organizer.marketplace.try(:registered_bank_account) %>
        <span class="label label-success label-pill pull-xs-right"><%= t('bank-account-verified-label') %></span>
      <% else %>
        <span class="label label-danger label-pill pull-xs-right"><%= t('bank-account-not-verified-label') %></span>
      <% end %>
      <%= t('organizer-bank-data') %>

    </a>
  </li>
</ul>
