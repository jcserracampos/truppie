                  <i class="fa fa-ticket"></i>
                  <strong><%= @tour.available %></strong> <%= t('tours_view_show_li_one') %>
                <% else %>
                  <i class="fa fa-ticket"></i>
                  <%= t('tours_view_show_li_two') %>
                <% end %>
              </li>

              <% if @tour.try(:minimum) %>
                <li><i class="fa fa-child"></i>  <strong><%= @tour.minimum %></strong> <%= t('tours_view_show_li_three') %></li>
              <% end %>

