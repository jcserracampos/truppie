        </div>
      <% else %>
        <div class="ribbon base <%= "abs-top-middle" if is_organizer_admin %> <%= "abs-closest-top" if !@tour.picture.exists? %>" style="text-align: right">
          <span><%= raw @tour.price %></span>
          <%= link_to t('tours_view_show_link_one'), confirm_tour_path, class: 'btn btn-primary btn-sm btn-block' %>
        </div>
      <% end %>
    </div>
	</div>

